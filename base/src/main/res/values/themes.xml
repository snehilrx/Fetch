<resources>
    <!-- Base application theme. -->
    <style name="Theme.Fetch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="fontFamily">@font/sohne</item>
    </style>

    <style name="Theme.Fetch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fetch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearanceOverlay.Fetch.CardView" parent="">
        <item name="cornerSize">5%</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Fetch.CardViewRounded" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Fetch.CardView.Thumbnail" parent="ShapeAppearanceOverlay.Fetch.CardView">
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
    </style>

    <style name="Fetch.ChipText" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">#fff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>